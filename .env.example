# Flask settings
FLASK_APP=smart_file_converter/app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///smart_converter.db
# For PostgreSQL: postgresql://username:password@localhost:5432/fileforgedb

# File uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Tesseract OCR path (for Windows, use full path like 'C:/Program Files/Tesseract-OCR/tesseract.exe')
TESSERACT_CMD=tesseract

# Email settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Admin user (will be created on first run if not exists)
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
